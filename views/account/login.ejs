<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
 <%  }) %>
 </ul>
<% } %>
<title><%= title %></title>

<div class="login-page">
  <h1><%= title %></h1>

  <form id="loginForm" action="/account/login" method="post">
    <div class="form-group">
      <label for="email">Email:</label>
      <span>Please enter the email address associated with your account.</span>
      <input type="email" id="email" name="email" required placeholder="you@example.com" value="<%= locals.email %>">
    </div>

    <div class="form-group">
      <label for="password">Password:</label>
      <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
      <input type="password" id="password" name="password" required placeholder="Enter your password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    </div>

    <div class="form-group">
      <button type="submit">Log In</button>
    </div>
  </form>

  <p>No account? <a href="/account/register">Sign-up</a></p>
</div>
