<div id="accountManagement">
    <% if (title) { %>
        <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    
    <%- messages() %>
    
    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error => { %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } %>
    
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    <p>You're logged in.</p>

    <p><a href="/account/updateAccount">Edit Account Information</a></p>
    
    <% if (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin') { %>
        <h3>Inventory Management</h3>
        <p><a href="/inv/">Manage Inventory</a></p>
    <% } %>
    
    <!-- User Reviews Management -->
    <h3>Your Reviews</h3>
    <% if (userReviews && userReviews.length > 0) { %>
        <div class="user-reviews">
            <% userReviews.forEach(function(review) { %>
                <div class="review-item">
                    <h4><%= review.inv_year %> <%= review.inv_make %> <%= review.inv_model %></h4>
                    <p class="review-text"><%= review.review_text %></p>
                    <p class="review-date">Reviewed on: <%= new Date(review.review_date).toLocaleDateString('en-US', {year: 'numeric', month: 'long', day: 'numeric'}) %></p>
                    <div class="review-actions">
                        <a href="/review/edit/<%= review.review_id %>" class="edit-link">Edit</a>
                        <a href="/review/delete/<%= review.review_id %>" class="delete-link">Delete</a>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <p>You haven't written any reviews yet. <a href="/">Browse our inventory</a> to add your first review!</p>
    <% } %>
</div>