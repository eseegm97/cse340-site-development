<%- messages() %>
<title><%= title %></title>

<div class="register-page">
	<h1><%= title %></h1>

	<form id="registerForm" class="form--register" action="/account/register" method="post">
		<div class="form-group">
			<label for="account_firstname">First name</label>
			<input type="text" id="account_firstname" name="account_firstname" required
				value="<%= typeof data !== 'undefined' && data.account_firstname ? data.account_firstname : '' %>"
				placeholder="First name">
		</div>

		<div class="form-group">
			<label for="account_lastname">Last name</label>
			<input type="text" id="account_lastname" name="account_lastname" required
				value="<%= typeof data !== 'undefined' && data.account_lastname ? data.account_lastname : '' %>"
				placeholder="Last name">
		</div>

		<div class="form-group">
			<label for="account_email">Email address</label>
			<input type="email" id="account_email" name="account_email" required
				value="<%= typeof data !== 'undefined' && data.account_email ? data.account_email : '' %>"
				placeholder="you@example.com">
		</div>

		<div class="form-group">
			<label for="account_password">Password</label>
			<input type="password" id="account_password" name="account_password" required minlength="12"
				pattern="^(?=.{12,}$)(?=.*[A-Z])(?=.*\d)(?=.*\W).*$"
				aria-describedby="passwordHelp"
				placeholder="Create a strong password">
			<small id="passwordHelp" class="form-text">Password must be at least 12 characters, contain 1 uppercase letter, 1 number and 1 special character.</small>
		</div>

		<div class="form-group">
			<button type="submit" class="btn">Register</button>
		</div>
	</form>

	<p>Already have an account? <a href="/account/login">Log in</a></p>
</div>
